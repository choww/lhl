<div class="text-center">
  <h2>Find a movie</h2>
  <%= form_tag(search_path, method: 'get', class: 'form-inline') do %>
    <div class="form-group">
      <%= label_tag(:title_or_director) %>
      <%= text_field_tag(:title_or_director, '', class: 'form-control') %>
    </div>

    <div class="form-group">
      <%= label_tag(:duration) %>
     <%= select_tag(:duration, options_for_select(
                                [['',''],
                                ['Under 90 mins', '< 90'], 
                                ['Between 90-120 mins', 'BETWEEN 90 AND 120'],
                                ['Over 120 mins', '> 120']]),
                              class: 'form-control') %>
    </div>

    <%= submit_tag("Search", class: 'btn btn-primary') %>
  <% end %>
</div>

<hr/>

<% if @search_params %>
  <h3>You searched for: <%= @search_params.join(' ') %></h3>
  <% @search_params.clear %>
<% end %>

<div id="poll_movies"></div>

<button class="button btn btn-danger">ajax</button>

<div class="row" id="all_movies">
  <% @movies.each do |movie| %>
    <div class="movie col-xs-4 col-md-3 col-xs-offset-1 col-md-offset-1">
      <%= render partial: 'movies', locals: {movie: movie} %>
    </div>
  <% end %>
</div>
